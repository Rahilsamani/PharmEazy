@model List<PharmEazy.Models.DTO.AllInvoicesDTO>;

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var i = 1;
}

<h2 class="mt-5 text-center mb-5">All Invoices</h2>

@if (Model.Count > 0)
{
	<table class="table">
		<thead>
			<tr>
				<th>
				</th>
				<th>
					@Html.DisplayNameFor(model => model[0].SellerName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model[0].GstNumber)
				</th>
				<th>
					@Html.DisplayNameFor(model => model[0].CreatedOn)
				</th>
				<th>
					@Html.DisplayNameFor(model => model[0].TotalAmount)
				</th>
				<th>
					@Html.DisplayNameFor(model => model[0].Status)
				</th>
				<th>
					Action
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.OrderByDescending(o => o.Id))
			{
				<tr>
					<td>
						@(i++)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.SellerName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.GstNumber)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CreatedOn)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.TotalAmount)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Status)
					</td>
					<td>
						<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">View</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="text-center">
		<p class="fs-5">No Invoice Generated Yet</p>
	</div>
}
